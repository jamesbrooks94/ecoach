  "private": true,
  "scripts": {
    "build": "react-scripts build && tsc -p tsconfig.app.json",
    "db:new": "knex --knexfile src/knexfile.ts -x ts migrate:make",
    "dev": "nf start -j Procfile.dev",
    "start:app": "react-scripts start",
    "start:server": "nodemon",
    "start": "yarn build && nodemon",
    "test": "react-scripts test",
    "heroku:deploy": "heroku container:release web -a e-coach-staging",
    "heroku:push": "heroku container:push web -a e-coach-staging"
  },
  "dependencies": {
    "auth0": "^2.24.0",
    "dotenv": "^8.2.0",
    "envalid": "^6.0.1",
    "express": "^4.17.1",
    "express-http-to-https": "^1.1.4",
    "foreman": "^3.0.1",
    "graphile-build-pg": "^4.5.3",
    "graphql-middleware": "^4.0.2",
    "graphql-shield": "^7.2.2",
    "helmet": "^3.22.0",
    "jwks-rsa": "^1.7.0",
    "knex": "^0.20.13",
    "morgan": "^1.10.0",
    "pg": "^8.0.0",
    "postgraphile": "^4.6.0",
    "postgraphile-plugin-connection-filter": "^1.1.3",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-scripts": "3.4.1",
    "ts-node": "^8.8.2",
    "typescript": "~3.7.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
