    "@types/express": "^4.17.4",
    "@types/helmet": "^0.0.45",
    "@types/jest": "^24.0.0",
    "@types/morgan": "^1.9.0",
    "@types/node": "^12.0.0",
    "@types/react-dom": "^16.9.0",
    "@types/react": "^16.9.0",
    "nodemon": "^2.0.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "proxy": "http://localhost:5000",
  "browserslist": {
    "production": [
