{
  "watch": ["src"],
  "verbose": true,
  "debug": true,
  "exec": "NODE_ENV=development TS_NODE_PROJECT=tsconfig.app.json node -r ts-node/register --inspect=5050 src/server.ts",
  "ignore": [
    "node_modules",
    "**/*.d.ts",
    "*.test.ts",
    "*.spec.ts",
    "fixtures/*",
    "test/**/*",
    "docs/*",
    "src/public",
    "src/migrations",
    "src/fe"
  ],
  "ext": "ts,gql,js",
  "inspect": true
}
